<Window x:Class="TriviaClient.Views.CreateRoomScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TriviaClient.Views"
        mc:Ignorable="d"
        Title="MainMenu" Height="720" Width="1000"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown">

    <Border 
        CornerRadius="50"
        Background="#bad6e8"
        BorderThickness="2.5">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#7096D1" Offset="0"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="5"/>

                </Grid.ColumnDefinitions>
                <TextBlock Text=""
                           Foreground="DarkBlue"
                           FontSize="25"
                           FontFamily="Montserrat"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Margin="50,0,22,0" Height="30"/>
                <Button x:Name="btnMinimize"
                        Background="Transparent"
                        BorderThickness="0"
                        Content="-"
                        Foreground="#7096D1"
                        FontSize="25"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Click="btnMinimize_Click"
                        Margin="841,1,56,-1" RenderTransformOrigin="0.5,0.5">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="-1"/>
                            <SkewTransform AngleY="-0.616"/>
                            <RotateTransform/>
                            <TranslateTransform Y="0.156"/>
                        </TransformGroup>
                    </Button.RenderTransform>
                </Button>

                <Button x:Name="btnClose"
                        Background="Transparent"
                        BorderThickness="0"
                        Content="X"
                        Foreground="#7096D1"
                        FontSize="20"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Click="btnClose_Click"
                        Margin="888,2,0,-2" RenderTransformOrigin="0.5,0.5">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="-1"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Button.RenderTransform>
                </Button>
            </Grid>

            <StackPanel x:Name="CreateRoomPanel"
                        Grid.Row="1"
                        Orientation="Vertical"
                        Margin="10,35,354,32" d:IsHidden="True">


                <TextBlock Text="Game Managment"
                           Foreground="#081F5C"
                           FontSize="25"
                           FontFamily="Montserrat"
                           Grid.Column="0"
                           VerticalAlignment="Top"
                           Margin="50,0,22,0" Height="30" FontWeight="Bold"/>


                <TextBlock Text="Room Name"
                    Foreground="#081F5C"
                    FontSize="20"
                    FontFamily="Montserrat"
                    HorizontalAlignment="Left"
                    TextWrapping="Wrap"
                    TextAlignment="Left"
                    Margin="50,80,0,0"/>

                <TextBox x:Name="txtRoomname"
                         MaxLength="16"
                         FontSize="18"
                         FontWeight="Medium"
                         FontFamily="Montserrat"
                         Background="Transparent"
                         Foreground="#081F5C"
                         CaretBrush="#081F5C"
                         BorderThickness="0,0,0,1"
                         Height="30"
                         HorizontalAlignment="Left"
                         Width="400"
                         Margin="50,5,0,0"/>

                <TextBlock Text="Player amount"
                    Foreground="#081F5C"
                    FontSize="20"
                    FontFamily="Montserrat"
                    HorizontalAlignment="Left"
                    TextWrapping="Wrap"
                    TextAlignment="Left"
                    Margin="50,80,0,0"/>

                <ComboBox x:Name="PlayerAmountBox"
                    HorizontalAlignment="Left"
                    Width="150"
                    Margin="50,5,0,0"
                    Background="Transparent"
                    Foreground="#081F5C"
                    BorderBrush="Transparent">

                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="{x:Type ComboBoxItem}">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#081F5C"/>
                        </Style>
                    </ComboBox.ItemContainerStyle>

                    <ComboBoxItem Content="1"/>
                    <ComboBoxItem Content="2"/>
                    <ComboBoxItem Content="3"/>
                    <ComboBoxItem Content="4"/>
                    <ComboBoxItem Content="5"/>
                    <ComboBoxItem Content="6"/>
                    <ComboBoxItem Content="7"/>
                    <ComboBoxItem Content="8"/>
                    <ComboBoxItem Content="9"/>
                </ComboBox>

                <TextBlock Text="Time to answer (seconds)"
                    Foreground="#081F5C"
                    FontSize="20"
                    FontFamily="Montserrat"
                    HorizontalAlignment="Left"
                    TextWrapping="Wrap"
                    TextAlignment="Left"
                    Margin="50,80,0,0"/>
                <TextBox x:Name="txtTimeToAnswer"
                         FontSize="18"
                         MaxLength="3"
                         PreviewTextInput="txtTimeToAnswer_PreviewTextInput"
                         FontWeight="Medium"
                         FontFamily="Montserrat"
                         Background="Transparent"
                         Foreground="#081F5C"
                         CaretBrush="#081F5C"
                         BorderThickness="0,0,0,1"
                         Height="30"
                         HorizontalAlignment="Left"
                         Width="400"
                         Margin="50,5,0,0"/>

                <Button x:Name="btnCreateRoom"                          
                            BorderThickness="0"
                            Content="Create Room"
                            Foreground="White"
                            FontSize="18"
                            FontFamily="Montserrat"
                            Cursor="Hand"                           
                            Margin="400,50,0,0"
                            Click="btnCreateRoom_Click">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#462AD8"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#28AEED"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Width="200" Height="50"
                                        CornerRadius="20"
                                        Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <TextBlock x:Name="ErrorMessage"
                    Text="Please fill all the fields!"
                    Visibility="Hidden"
                    Foreground="#081F5C"
                    FontSize="20"
                    FontFamily="Montserrat"
                    HorizontalAlignment="Left"
                    TextWrapping="Wrap"
                    TextAlignment="Left"
                    Margin="400,5,0,0"/>

            </StackPanel>

            <StackPanel
                Grid.Row="1" Margin="498,0,0,0">

                <Image Source="/Models/TriviaWithoutClountLogo.png" Height="194" Width="424"
                       HorizontalAlignment="Right"
                       Margin="200,0,0,0"/>

                <Button x:Name="btnStartGame"                          
                BorderThickness="0"
                Content="Start Game"
                Foreground="White"
                FontSize="18"
                FontFamily="Montserrat"
                Cursor="Hand"
                Click="btnStartGame_Click"
                        Visibility="Collapsed"
                        Margin="250,400,0,0">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#462AD8"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#28AEED"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Width="200" Height="50"
                CornerRadius="20"
                Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                    HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <StackPanel x:Name="RoomPlayerInfoPanell"
                        Visibility="Collapsed"
                Grid.Row="1"
                Orientation="Vertical"
                Margin="10,35,354,32">


                <TextBlock Text="Game Managment"
                    Foreground="#081F5C"
                    FontSize="25"
                    FontFamily="Montserrat"
                    Grid.Column="0"
                    VerticalAlignment="Top"
                    Margin="50,0,22,0" Height="30" FontWeight="Bold"/>

                <WrapPanel Margin="25,40,0,0">
                <TextBlock Text="Room name: ??????"
                           x:Name="RoomNameShow"
               Foreground="#081F5C"
               FontSize="20"
               FontFamily="Montserrat"
               Width="150"
               TextWrapping="Wrap"
               Margin="0,0,20,0"/>

                <TextBlock Text="Player amount: ?"
                           x:Name="PlayerAmountShow"
               Foreground="#081F5C"
               FontSize="20"
               FontFamily="Montserrat"
               Width="170"
               TextWrapping="Wrap"
               Margin="0,0,20,0"/>

                 <TextBlock Text="Time to answer: ?"
                            x:Name="TimeToAnswerShow"
               Foreground="#081F5C"
               FontSize="20"
               FontFamily="Montserrat"
               Width="170"
               TextWrapping="Wrap"/>
                </WrapPanel>

