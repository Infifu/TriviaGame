                <TextBlock x:Name="ErrorMessage1"
                    Text="Please fill all the fields!"
                    Visibility="Hidden"
                    Foreground="#081F5C"
                    FontSize="20"
                    FontFamily="Montserrat"
                    HorizontalAlignment="Left"
                    TextWrapping="Wrap"
                    TextAlignment="Left"
                    Margin="400,5,0,0"/>

            </StackPanel>





        </Grid>

    </Border>
</Window>