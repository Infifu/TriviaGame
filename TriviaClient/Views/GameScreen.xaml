<Page x:Class="TriviaClient.Views.GameScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title=""
      Height="720" Width="1000"
      Background="Transparent">

    <Page.Resources>
        <Style x:Key="RoundAnswerButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="100"/>
            <Setter Property="Background" Value="#7096D1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontFamily" Value="Montserrat"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
    </Page.Resources>

    <Border CornerRadius="50"
            Background="#bad6e8"
            BorderThickness="2.5">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#7096D1" Offset="0"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Grid Margin="0,0,-106,-2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="891"/>
                <ColumnDefinition Width="31*"/>
                <ColumnDefinition Width="98*"/>
            </Grid.ColumnDefinitions>

            <StackPanel VerticalAlignment="Center" Margin="10,0,144,0" Height="659" Grid.ColumnSpan="2">

                <Border CornerRadius="30"
                        Background="White"
                        BorderBrush="#7096D1"
                        BorderThickness="3"
                        Padding="20"
                        Width="802" Height="255">
                    <TextBlock x:Name="QuestionText"
                               Text="Best programing language?"
                               TextWrapping="Wrap"
                               FontSize="24"
                               FontFamily="Montserrat"
                               Foreground="Black"
                               TextAlignment="Center" Margin="13,83,-13,-13"/>
                </Border>

                <Rectangle Height="80" Fill="Transparent"/>

                <UniformGrid Rows="2" Columns="2"
                             HorizontalAlignment="Stretch"
                             Margin="0,0,0,20" RenderTransformOrigin="0.5,0.5" Width="771" Height="292">
                    <UniformGrid.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleY="-0.285"/>
                            <RotateTransform/>
                            <TranslateTransform Y="-1.995"/>
                        </TransformGroup>
                    </UniformGrid.RenderTransform>

                    <Button x:Name="AnswerA" Content="HTML"
                            Height="100"
                            Background="#7096D1"
                            Foreground="White"
                            FontSize="20"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Margin="10,-27,10,-32">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="#7096D1" CornerRadius="25">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="AnswerB" Content="Python"
                            Height="100"
                            Background="#7096D1"
                            Foreground="White"
                            FontSize="20"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Margin="10,-7,10,-8">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="#7096D1" CornerRadius="25">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="AnswerC" Content="JavaScript"
                            Height="100"
                            Background="#7096D1"
                            Foreground="White"
                            FontSize="20"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Margin="10,0,10,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="#7096D1" CornerRadius="25">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="AnswerD" Content="C++"
                            Height="100"
                            Background="#7096D1"
                            Foreground="White"
                            FontSize="20"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Margin="10,-10,10,-6">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="#7096D1" CornerRadius="25">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </UniformGrid>
            </StackPanel>

            <StackPanel Grid.Column="1"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        Margin="747,30,0,0"
                        Width="117" Height="155" RenderTransformOrigin="-0.965,0.457">

                <Border Background="White"
                        CornerRadius="15"
                        Padding="10"
                        BorderBrush="#7096D1"
                        BorderThickness="2"
                        Margin="0,0,0,10">
                    <TextBlock x:Name="TimerText"
                               Text="12:00"
                               FontSize="18"
                               FontFamily="Montserrat"
                               FontWeight="Bold"
                               Foreground="#081F5C"
                               HorizontalAlignment="Center"/>
                </Border>

                <Border Background="White"
                        CornerRadius="15"
                        Padding="10"
                        BorderBrush="#7096D1"
                        BorderThickness="2"
                        Margin="0,0,0,10">
                    <TextBlock x:Name="QuestionsLeftText"
                               Text="Left: 3"
                               FontSize="16"
                               FontFamily="Montserrat"
                               Foreground="#081F5C"
                               HorizontalAlignment="Center"/>
                </Border>

                <Border Background="White"
                        CornerRadius="15"
                        Padding="10"
                        BorderBrush="#7096D1"
                        BorderThickness="2">
                    <TextBlock x:Name="QuestionsRightText"
                               Text="Right: 8"
                               FontSize="16"
                               FontFamily="Montserrat"
                               Foreground="#081F5C"
                               HorizontalAlignment="Center"/>
                </Border>

            </StackPanel>
        </Grid>
    </Border>
</Page>