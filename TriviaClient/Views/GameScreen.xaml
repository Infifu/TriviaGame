<Window x:Class="TriviaClient.Views.GameScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:TriviaClient.Views"
        mc:Ignorable="d"
        Title="GameScreen"
        Height="720" Width="1000"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown">

    <Border CornerRadius="50"
            Background="#bad6e8"
            BorderThickness="2.5">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#7096D1" Offset="0"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Grid Margin="0,0,-106,-69">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="891"/>
                <ColumnDefinition Width="31*"/>
                <ColumnDefinition Width="98*"/>
            </Grid.ColumnDefinitions>

            <StackPanel VerticalAlignment="Center" Margin="10,0,144,0" Height="659" Grid.ColumnSpan="2">

                <Border CornerRadius="30"
                        Background="#FFFFF9F0"
                        BorderBrush="#7096D1"
                        BorderThickness="3"
                        Padding="20"
                        Width="772" Height="252">
                    <TextBlock x:Name="QuestionText"
                               Text="Best programming language?"
                               TextWrapping="Wrap"
                               FontSize="24"
                               FontFamily="Montserrat"
                               Foreground="Black"
                               TextAlignment="Center" Margin="13,83,-13,-13"/>
                </Border>

                <Rectangle Height="100" Fill="Transparent"/>

                <UniformGrid Rows="2" Columns="2"
                             HorizontalAlignment="Stretch"
                             Margin="0,0,0,20" RenderTransformOrigin="0.5,0.5" Width="771" Height="292">
                    <UniformGrid.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleY="-0.285"/>
                            <RotateTransform/>
                            <TranslateTransform Y="-1.995"/>
                        </TransformGroup>
                    </UniformGrid.RenderTransform>

                    <Button x:Name="AnswerA" Content="HTML" Margin="10,-27,10,80">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="#7096D1" CornerRadius="25">
                                    <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  RecognizesAccessKey="True"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#28AEED"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Foreground>White</Button.Foreground>
                        <Button.FontSize>20</Button.FontSize>
                        <Button.FontFamily>Montserrat</Button.FontFamily>
                    </Button>

                    <Button x:Name="AnswerB" Content="Python" Margin="10,-27,10,80">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="#7096D1" CornerRadius="25">
                                    <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  RecognizesAccessKey="True"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#28AEED"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Foreground>White</Button.Foreground>
                        <Button.FontSize>20</Button.FontSize>
                        <Button.FontFamily>Montserrat</Button.FontFamily>
                    </Button>

                    <Button x:Name="AnswerC" Content="JavaScript" Margin="10,-27,10,80">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="#7096D1" CornerRadius="25">
                                    <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  RecognizesAccessKey="True"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#28AEED"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Foreground>White</Button.Foreground>
                        <Button.FontSize>20</Button.FontSize>
                        <Button.FontFamily>Montserrat</Button.FontFamily>
                    </Button>

                    <Button x:Name="AnswerD" Content="C++" Margin="10,-27,10,80">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="#7096D1" CornerRadius="25">
                                    <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  RecognizesAccessKey="True"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#28AEED"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Foreground>White</Button.Foreground>
                        <Button.FontSize>20</Button.FontSize>
                        <Button.FontFamily>Montserrat</Button.FontFamily>
                    </Button>

                </UniformGrid>
            </StackPanel>

            <StackPanel Grid.Column="1"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        Margin="747,62,0,0"
                        Width="117" Height="171" RenderTransformOrigin="-0.965,0.457">

                <Border Background="White"
                        CornerRadius="15"
                        Padding="10"
                        BorderBrush="#7096D1"
                        BorderThickness="2"
                        Margin="0,0,0,10">
                    <TextBlock x:Name="TimerText"
                               Text="12:00"
                               FontSize="18"
                               FontFamily="Montserrat"
                               FontWeight="Bold"
                               Foreground="#081F5C"
                               HorizontalAlignment="Center"/>
                </Border>

                <Border Background="White"
                        CornerRadius="15"
                        Padding="10"
                        BorderBrush="#7096D1"
                        BorderThickness="2"
                        Margin="0,0,0,10">
                    <TextBlock x:Name="QuestionsLeftText"
                               Text="Left: 3"
                               FontSize="16"
                               FontFamily="Montserrat"
                               Foreground="#081F5C"
                               HorizontalAlignment="Center"/>
                </Border>

                <Border Background="White"
                        CornerRadius="15"
                        Padding="10"
                        BorderBrush="#7096D1"
                        BorderThickness="2">
                    <TextBlock x:Name="QuestionsRightText"
                               Text="Right: 8"
                               FontSize="16"
                               FontFamily="Montserrat"
                               Foreground="#081F5C"
                               HorizontalAlignment="Center"/>
                </Border>
            </StackPanel>
        </Grid>
    </Border>
</Window>
