<Window x:Class="Statistics.View.StatisticsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StatisticsView" Height="720" Width="1000"
        Background="Transparent" AllowsTransparency="True"
        WindowStyle="None" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Border CornerRadius="50" Background="#bad6e8" BorderThickness="2.5">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#7096D1" Offset="0"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Controls -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Menu Button -->
                <Button Content="← Menu" Width="100" Height="36"
                        FontFamily="Montserrat" FontSize="14" FontWeight="Bold"
                        BorderThickness="1" BorderBrush="#7096D1"
                        Background="#ddeeff" Foreground="#081F5C"
                        HorizontalAlignment="Left" VerticalAlignment="Top"
                        Margin="0,0,0,0" Click="BackToMenu_Click">
                        
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="White"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Minimize and Close Buttons -->
                <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,0,0">
                    <Button x:Name="btnMinimize"
                            Background="Transparent"
                            BorderThickness="0"
                            Content="−"
                            Foreground="#7096D1"
                            FontSize="25"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Click="btnMinimize_Click"
                            Width="40" Height="36">
                        <Button.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="-1"/>
                                <SkewTransform AngleY="-0.616"/>
                                <RotateTransform/>
                                <TranslateTransform Y="0.156"/>
                            </TransformGroup>
                        </Button.RenderTransform>
                    </Button>

                    <Button x:Name="btnClose"
                            Background="Transparent"
                            BorderThickness="0"
                            Content="X"
                            Foreground="#7096D1"
                            FontSize="20"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Click="btnClose_Click"
                            Width="40" Height="36">
                        <Button.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="-1"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Button.RenderTransform>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Podium Top 3 Section -->
            <StackPanel Grid.Row="0" Margin="0,40,0,20">
                <TextBlock Text="Top 3" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" FontFamily="Montserrat" Foreground="#081F5C"/>

                <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0">
                    <Image Source="/Models/podium.png" Width="400" Height="160"/>
                    <Canvas>
                        <TextBlock Text="Bob McAllister" FontSize="14" FontFamily="Montserrat" Foreground="#081F5C" Canvas.Left="30" Canvas.Top="53" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                        <TextBlock Text="Shmul Rabinowitz" FontSize="14" FontFamily="Montserrat" Foreground="#081F5C" Canvas.Left="135" Canvas.Top="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="Ilya Koren" FontSize="14" FontFamily="Montserrat" Foreground="#081F5C" Canvas.Left="277" Canvas.Top="91"/>
                    </Canvas>
                </Grid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                    <TextBlock Text="Score" FontSize="20" FontWeight="Bold" Foreground="#081F5C" FontFamily="Montserrat" Margin="20,0"/>
                    <TextBlock Text="Top 1 = 364" FontSize="20" Foreground="#081F5C" FontFamily="Montserrat" Margin="20,0"/>
                    <TextBlock Text="Top 2 = 226" FontSize="20" Foreground="#081F5C" FontFamily="Montserrat" Margin="20,0"/>
                    <TextBlock Text="Top 3 = 43" FontSize="20" Foreground="#081F5C" FontFamily="Montserrat" Margin="20,0"/>
                </StackPanel>

                <TextBlock Text="You need 250 more points to get on podium"
                           FontSize="20" HorizontalAlignment="Center"
                           Margin="0,10,0,0"
                           FontFamily="Montserrat"
                           Foreground="#081F5C"/>
            </StackPanel>

            <!-- Statistic Info  -->
            <Grid Grid.Row="1" Margin="0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Your Statistic -->
                <StackPanel Grid.Column="0" Width="456" VerticalAlignment="Top" HorizontalAlignment="Right">
                    <TextBlock Text="Your Statistic" FontSize="32" FontWeight="Bold"
                               Margin="0,0,0,10"
                               HorizontalAlignment="Left"
                               FontFamily="Montserrat"
                               Foreground="#081F5C"/>

                    <WrapPanel Orientation="Vertical" HorizontalAlignment="Left">
                        <!-- Statistic -->
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Border Background="#ddeeff" Padding="10" CornerRadius="5" Margin="0,0,5,0" Width="158">
                                <TextBlock Text="Score:" FontSize="18" FontFamily="Montserrat" Foreground="#081F5C"/>
                            </Border>
                            <Border Background="#ddeeff" Padding="10" CornerRadius="5" Width="285">
                                <TextBlock Text="42" FontSize="18" FontFamily="Montserrat" Foreground="#081F5C"/>
                            </Border>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Border Background="#ddeeff" Padding="10" CornerRadius="5" Margin="0,0,5,0" Width="158">
                                <TextBlock Text="Games Played:" FontSize="18" FontFamily="Montserrat" Foreground="#081F5C"/>
                            </Border>
                            <Border Background="#ddeeff" Padding="10" CornerRadius="5" Width="285">
                                <TextBlock Text="17" FontSize="18" FontFamily="Montserrat" Foreground="#081F5C"/>
                            </Border>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Border Background="#ddeeff" Padding="10" CornerRadius="5" Margin="0,0,5,0" Width="158">
                                <TextBlock Text="Total Answers:" FontSize="18" FontFamily="Montserrat" Foreground="#081F5C"/>
                            </Border>
                            <Border Background="#ddeeff" Padding="10" CornerRadius="5" Width="285">
                                <TextBlock Text="143" FontSize="18" FontFamily="Montserrat" Foreground="#081F5C"/>
                            </Border>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Border Background="#ddeeff" Padding="10" CornerRadius="5" Margin="0,0,5,0" Width="158">
                                <TextBlock Text="Correct Answers:" FontSize="18" FontFamily="Montserrat" Foreground="#081F5C"/>
                            </Border>
                            <Border Background="#ddeeff" Padding="10" CornerRadius="5" Width="285">
                                <TextBlock Text="99" FontSize="18" FontFamily="Montserrat" Foreground="#081F5C"/>
                            </Border>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Border Background="#ddeeff" Padding="10" CornerRadius="5" Margin="0,0,5,0" Width="158">
                                <TextBlock Text="Average Time:" FontSize="18" FontFamily="Montserrat" Foreground="#081F5C"/>
                            </Border>
                            <Border Background="#ddeeff" Padding="10" CornerRadius="5" Width="285">
                                <TextBlock Text="4.2s" FontSize="18" FontFamily="Montserrat" Foreground="#081F5C"/>
                            </Border>
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>

                <!-- Divider -->
                <Rectangle Grid.Column="1" Fill="#7096D1" Width="2" RadiusX="1" RadiusY="1" HorizontalAlignment="Center"/>

                <!-- Top 1 Statistic -->
                <StackPanel Grid.Column="2" Width="456" VerticalAlignment="Top" HorizontalAlignment="Left">
                    <TextBlock Text="Top 1 Statistic:" FontSize="32" FontWeight="Bold"
                               FontFamily="Montserrat"
                               Foreground="#081F5C" Width="443" Margin="0,0,0,10"/>

                    <WrapPanel Orientation="Vertical" HorizontalAlignment="Left">
                        <!-- Top Statistic -->
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Border Background="#ddeeff" Padding="10" CornerRadius="5" Margin="0,0,5,0" Width="158">
                                <TextBlock Text="Score:" FontSize="18" FontFamily="Montserrat" Foreground="#081F5C"/>
                            </Border>
                            <Border Background="#ddeeff" Padding="10" CornerRadius="5" Width="285">
                                <TextBlock Text="364" FontSize="18" FontFamily="Montserrat" Foreground="#081F5C"/>
                            </Border>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Border Background="#ddeeff" Padding="10" CornerRadius="5" Margin="0,0,5,0" Width="158">
                                <TextBlock Text="Games Played:" FontSize="18" FontFamily="Montserrat" Foreground="#081F5C"/>
                            </Border>
                            <Border Background="#ddeeff" Padding="10" CornerRadius="5" Width="285">
                                <TextBlock Text="51" FontSize="18" FontFamily="Montserrat" Foreground="#081F5C"/>
                            </Border>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Border Background="#ddeeff" Padding="10" CornerRadius="5" Margin="0,0,5,0" Width="158">
                                <TextBlock Text="Total Answers:" FontSize="18" FontFamily="Montserrat" Foreground="#081F5C"/>
                            </Border>
                            <Border Background="#ddeeff" Padding="10" CornerRadius="5" Width="285">
                                <TextBlock Text="388" FontSize="18" FontFamily="Montserrat" Foreground="#081F5C"/>
                            </Border>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Border Background="#ddeeff" Padding="10" CornerRadius="5" Margin="0,0,5,0" Width="158">
                                <TextBlock Text="Correct Answers:" FontSize="18" FontFamily="Montserrat" Foreground="#081F5C"/>
                            </Border>
                            <Border Background="#ddeeff" Padding="10" CornerRadius="5" Width="285">
                                <TextBlock Text="364" FontSize="18" FontFamily="Montserrat" Foreground="#081F5C"/>
                            </Border>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Border Background="#ddeeff" Padding="10" CornerRadius="5" Margin="0,0,5,0" Width="158">
                                <TextBlock Text="Average Time:" FontSize="18" FontFamily="Montserrat" Foreground="#081F5C"/>
                            </Border>
                            <Border Background="#ddeeff" Padding="10" CornerRadius="5" Width="285">
                                <TextBlock Text="2.9s" FontSize="18" FontFamily="Montserrat" Foreground="#081F5C"/>
                            </Border>
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>