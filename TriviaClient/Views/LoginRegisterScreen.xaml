<Window x:Class="TriviaClient.Views.LoginRegisterScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TriviaClient.Views"
        mc:Ignorable="d"
        Title="LoginRegisterScreen" Height="720" Width="1000"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown">

    <Border 
        CornerRadius="50"
        Background="#bad6e8"
        BorderThickness="2.5">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#7096D1" Offset="0"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="5"/>

                </Grid.ColumnDefinitions>
                <TextBlock Text=""
                           Foreground="DarkBlue"
                           FontSize="25"
                           FontFamily="Montserrat"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Margin="50,0,22,0" Height="30"/>
                <Button x:Name="btnMinimize"
                        Background="Transparent"
                        BorderThickness="0"
                        Content="-"
                        Foreground="#7096D1"
                        FontSize="25"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Click="btnMinimize_Click"
                        Margin="841,1,56,-1" RenderTransformOrigin="0.5,0.5">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="-1"/>
                            <SkewTransform AngleY="-0.616"/>
                            <RotateTransform/>
                            <TranslateTransform Y="0.156"/>
                        </TransformGroup>
                    </Button.RenderTransform>
                </Button>

                <Button x:Name="btnClose"
                        Background="Transparent"
                        BorderThickness="0"
                        Content="X"
                        Foreground="#7096D1"
                        FontSize="20"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Click="btnClose_Click"
                        Margin="888,2,0,-2" RenderTransformOrigin="0.5,0.5">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="-1"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Button.RenderTransform>
                </Button>
            </Grid>

            <StackPanel x:Name="LoginPanel"
                        Grid.Row="1"
                        Orientation="Vertical"
                        Margin="271,35,270,0">
                <Image Source="/Models/TriviaLogo.png" Height="196" Width="448"/>

                <TextBlock Text="Trivia is the art of knowing a little about everything and everything about nothing"
                           Foreground="#081F5C"
                           FontSize="20"
                           FontFamily="Montserrat"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           TextAlignment="Center">
                </TextBlock>

                <TextBlock Text="Username"
                           Foreground="#081F5C"
                           FontSize="20"
                           FontFamily="Montserrat"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,20,0,0">
                </TextBlock>

                <TextBox x:Name="txtUsername"
                         FontSize="13"
                         FontWeight="Medium"
                         FontFamily="Montserrat"
                         Background="Transparent"
                         Foreground="#081F5C"
                         CaretBrush="#081F5C"
                         BorderThickness="0,0,0,1"
                         Height="30"
                         VerticalContentAlignment="Center"
                         Margin="0,5,0,0">
                </TextBox>

                <TextBlock Text="Password"
                           Foreground="#081F5C"
                           FontSize="20"
                           FontFamily="Montserrat"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,40,0,0">
                </TextBlock>

                <PasswordBox x:Name="txtPAssword"
                         FontSize="13"
                         FontWeight="Medium"
                         FontFamily="Montserrat"
                         Background="Transparent"
                         Foreground="#081F5C"
                         CaretBrush="#081F5C"
                         BorderThickness="0,0,0,1"
                         Height="30"
                         VerticalContentAlignment="Center"
                         Margin="0,5,0,0">
                </PasswordBox>

                <Button x:Name="btnLogin"                          
                            BorderThickness="0"
                            Content="LOG IN"
                            Foreground="White"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"                           
                            Margin="0,50,0,0"
                            Click="btnLogin_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#462AD8"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#28AEED"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="150" Height="40"
                                        CornerRadius="20"
                                        Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Register"
                           Foreground="White"
                           FontSize="12"
                           FontWeight="Medium"
                           FontFamily="Montserrat"
                           Margin="0,5,0,0"
                           Cursor="Hand"
                           MouseLeftButtonDown="btnSwitchToRegister_Click">
                    </TextBlock>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock x:Name="ErrorBox"
                           Visibility="Collapsed"
                           Text="Password incorrect"
                           Foreground="#081F5C"
                           FontSize="12"
                           FontWeight="Medium"
                           FontFamily="Montserrat"
                           Margin="0,5,0,0">
                    </TextBlock>
                </StackPanel>



            </StackPanel>
            <StackPanel x:Name="RegisterPanel"
                Grid.Row="1"
                Orientation="Vertical"
                Margin="271,35,270,0" Visibility="Collapsed" d:IsHidden="True">
                <Image Source="/Models/TriviaLogo.png" Height="196" Width="499"/>

                <TextBlock Text="Trivia is the art of knowing a little about everything and everything about nothing"
                    Foreground="#081F5C"
                    FontSize="20"
                    FontFamily="Montserrat"
                    HorizontalAlignment="Center"
                    TextWrapping="Wrap"
                    TextAlignment="Center"/>

                <TextBlock Text="Email"
                           Foreground="#081F5C"
                           FontSize="20"
                           FontFamily="Montserrat"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,20,0,0">
                </TextBlock>

                <TextBox x:Name="txtEmailInReg"
                    FontSize="13"
                    FontWeight="Medium"
                    FontFamily="Montserrat"
                    Background="Transparent"
                    Foreground="#081F5C"
                    CaretBrush="#081F5C"
                    BorderThickness="0,0,0,1"
                    Height="30"
                    VerticalContentAlignment="Center"
                    Margin="0,5,0,0"/>



                <TextBlock Text="Username"
                    Foreground="#081F5C"
                    FontSize="20"
                    FontFamily="Montserrat"
                    HorizontalAlignment="Center"
                    TextWrapping="Wrap"
                    TextAlignment="Center"
                    Margin="0,20,0,0"/>

                <TextBox x:Name="txtUsernameInReg"
                    FontSize="13"
                    FontWeight="Medium"
                    FontFamily="Montserrat"
                    Background="Transparent"
                    Foreground="#081F5C"
                    CaretBrush="#081F5C"
                    BorderThickness="0,0,0,1"
                    Height="30"
                    VerticalContentAlignment="Center"
                    Margin="0,5,0,0"/>

                <TextBlock Text="Password"
                    Foreground="#081F5C"
                    FontSize="20"
                    FontFamily="Montserrat"
                    HorizontalAlignment="Center"
                    TextWrapping="Wrap"
                    TextAlignment="Center"
                    Margin="0,40,0,0"/>

                <PasswordBox x:Name="txtPAsswordInReg"
                    FontSize="13"
                    FontWeight="Medium"
                    FontFamily="Montserrat"
                    Background="Transparent"
                    Foreground="#081F5C"
                    CaretBrush="#081F5C"
                    BorderThickness="0,0,0,1"
                    Height="30"
                    VerticalContentAlignment="Center"
                    Margin="0,5,0,0"/>

                <Button x:Name="btnRegister"                          
                    BorderThickness="0"
                    Content="REGISTER"
                    Foreground="White"
                    FontSize="12"
                    FontFamily="Montserrat"
                    Cursor="Hand"                           
                    Margin="0,50,0,0"
                    Click="btnRegister_Click">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#462AD8"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#28AEED"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Width="150" Height="40"
                                CornerRadius="20"
                                Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                    HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Login"
                        Foreground="White"
                        FontSize="12"
                        FontWeight="Medium"
                        FontFamily="Montserrat"
                        Margin="0,5,0,0"
                        Cursor="Hand"
                        MouseLeftButtonDown="btnSwitchToLogin_Click"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock x:Name="ErrorBoxRegister"
               Visibility="Collapsed"
               Text="Registration error"
               Foreground="#081F5C"
               FontSize="12"
               FontWeight="Medium"
               FontFamily="Montserrat"
               Margin="0,5,0,0"/>
            </StackPanel>

                
                
                



            </StackPanel>


        </Grid>
        

    </Border>
</Window>