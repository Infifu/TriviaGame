<Window x:Class="TriviaClient.Views.JoinRoomView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="JoinRoomView" Height="720" Width="1000"
        WindowStyle="None" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent" AllowsTransparency="True"
        MouseDown="Window_MouseDown">

    <Window.Resources>
        <Style x:Key="RoomCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#ddeeff"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Width" Value="300"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#ffffff"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#7096D1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Montserrat"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="50" Background="#bad6e8" BorderThickness="2.5">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#7096D1" Offset="0"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Content="← Menu" Width="100" Height="36"
                        FontFamily="Montserrat" FontSize="14" FontWeight="Bold"
                        BorderThickness="1" BorderBrush="#7096D1"
                        Background="#ddeeff" Foreground="#081F5C"
                        HorizontalAlignment="Left" VerticalAlignment="Top"
                        Click="BackToMenu_Click"/>

                <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right">
                    <Button x:Name="btnMinimize" Background="Transparent" BorderThickness="0"
                            Content="−" Foreground="#7096D1" FontSize="25" FontFamily="Montserrat"
                            Cursor="Hand" Click="btnMinimize_Click" Width="40" Height="36"/>
                    <Button x:Name="btnClose" Background="Transparent" BorderThickness="0"
                            Content="X" Foreground="#7096D1" FontSize="20" FontFamily="Montserrat"
                            Cursor="Hand" Click="btnClose_Click" Width="40" Height="36"/>
                </StackPanel>
            </Grid>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <!-- Room list -->
                <ScrollViewer Grid.Column="0" Margin="10">
                    <ItemsControl ItemsSource="{Binding Rooms}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource RoomCardStyle}">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontFamily="Montserrat" FontSize="18"
                                                   FontWeight="Bold" Foreground="#081F5C"/>
                                        <TextBlock Text="{Binding PlayerStatus}" FontFamily="Montserrat" FontSize="14"
                                                   Foreground="#081F5C"/>
                                        <Button Content="Join"
                                                Click="JoinRoom_Click"
                                                Tag="{Binding}"
                                                Style="{StaticResource RoundedButtonStyle}" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Room Info Panel -->
                <StackPanel x:Name="RoomPlayerInfoPanel" Grid.Column="1"
                            Orientation="Vertical" Margin="30,10,10,10"
                            Visibility="Collapsed">

                    <TextBlock Text="Game Management"
                               Foreground="#081F5C" FontSize="25" FontWeight="Bold"
                               FontFamily="Montserrat" Margin="0,0,0,10"/>

                    <WrapPanel Margin="0,0,0,10">
                        <TextBlock x:Name="RoomNameShow" Width="300" Margin="0,0,20,0"
                                   FontSize="20" FontFamily="Montserrat" Foreground="#081F5C"/>
                        <TextBlock x:Name="PlayerAmountShow" Width="300" Margin="0,0,20,0"
                                   FontSize="20" FontFamily="Montserrat" Foreground="#081F5C"/>
                        <TextBlock x:Name="TimeToAnswerShow" Width="300"
                                   FontSize="20" FontFamily="Montserrat" Foreground="#081F5C"/>
                    </WrapPanel>

                    <!-- Placeholder players list -->
                    <ItemsControl Margin="0,10,0,0">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FFFAFAFA" BorderBrush="#7096D1" BorderThickness="1"
                                        CornerRadius="8" Padding="10" Margin="0,5,0,5">
                                    <TextBlock Text="{Binding}" FontSize="13" FontWeight="Medium"
                                               FontFamily="Montserrat" Foreground="#081F5C"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.Items>
                            <sys:String>Player 1</sys:String>
                            <sys:String>Player 2</sys:String>
                            <sys:String>Player 3</sys:String>
                        </ItemsControl.Items>
                    </ItemsControl>

                    <TextBlock x:Name="ErrorMessage1"
                               Text="Error joining room"
                               Visibility="Hidden"
                               Foreground="#081F5C" FontSize="16"
                               FontFamily="Montserrat" Margin="10,10,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
